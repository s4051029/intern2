<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/news_background"
             tools:context="com.mirrorchannelth.internship.fragment.ActivityHistoryFragment">
    <include layout="@layout/layout_collapse_toolbar" android:id="@+id/toolbarActivity"/>
    <com.aspsine.irecyclerview.IRecyclerView
        android:id="@+id/activity_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbarActivity"
        android:layout_height="match_parent"/>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coordinatorLayout"
        android:layout_below="@id/toolbarActivity"
        android:visibility="gone"
    >

    </android.support.design.widget.CoordinatorLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progressbar"
        android:layout_height="wrap_content"/>



</RelativeLayout>
